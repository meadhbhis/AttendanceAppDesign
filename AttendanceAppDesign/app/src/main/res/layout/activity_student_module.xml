<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Banner for top of page-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#64B5F6">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="home"
            android:onClick="viewStudentProfile"
            android:background="#64B5F6"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Module"
            android:padding="10dp"
            android:gravity="center|right"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <!-- End of banner-->

    <TableLayout
        android:id="@+id/moduleDetailsTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="#42A5F5">

        <TextView
            android:id="@+id/moduleTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Agile Software Engineering"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#BBDEFB"
            android:gravity="center_vertical">

            <TextView
                android:text="Module Code"
                android:paddingRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/moduleCode"
                android:text="AC31007"
                android:paddingLeft="20dp"/>
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#E3F2FD">

            <TextView
                android:text="Lecturer"
                android:paddingRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/moduleLecturer"
                android:text="Dr Mark Snaith"
                android:paddingLeft="20dp" />
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#BBDEFB">

            <TextView
                android:text="Email"
                android:layout_marginRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/moduleEmail"
                android:layout_width="wrap_content"
                android:text="m.snaith@dundee.ac.uk"
                android:layout_marginLeft="20dp"
                android:singleLine="false"/>
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#E3F2FD">

            <TextView
                android:text="Room Number"
                android:paddingRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/moduleRoom"
                android:text="2.15 QMB"
                android:paddingLeft="20dp" />
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#BBDEFB"
            android:gravity="center_vertical">

            <TextView
                android:text="Current Week"
                android:paddingRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/moduleWeek"
                android:text="5/12"
                android:paddingLeft="20dp"/>
        </TableRow>
    </TableLayout>


    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <!-- Also needs a layout change-->
    <TableLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="#42A5F5">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Your Attendance"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"/>
    </TableLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Module Attendance: "
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/modulePercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85%"
            android:textSize="35dp"
            android:textStyle="bold"/>
    <ImageView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:src="@drawable/photo"
        android:adjustViewBounds="true"
        android:layout_gravity="top"
       />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overall Attendance: "
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/moduleOverallAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80%"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:src="@drawable/photo"
            android:adjustViewBounds="true"
            android:layout_gravity="right"/>
    </LinearLayout>



</LinearLayout>