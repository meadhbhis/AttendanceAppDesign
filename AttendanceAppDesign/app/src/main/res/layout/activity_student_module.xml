<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="University of Dundee"
        android:id="@+id/textView"
        android:textColor="#FFF"
        android:background="#2962FF"
        android:gravity="center"
        android:textSize="30dp"
        android:padding="10dp"/>

    <TableLayout
        android:id="@+id/moduleDetailsTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="#42A5F5">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Agile Software Engineering"
            android:padding="20dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#BBDEFB"
            android:gravity="center_vertical">

            <TextView
                android:text="Module Code"
                android:paddingRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:text="AC31007"
                android:paddingLeft="20dp"/>
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#E3F2FD">

            <TextView
                android:text="Lecturer"
                android:paddingRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:text="Dr Mark Snaith"
                android:paddingLeft="20dp" />
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#BBDEFB">

            <TextView
                android:text="Email"
                android:layout_marginRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="m.snaith@dundee.ac.uk"
                android:layout_marginLeft="20dp"
                android:singleLine="false"/>
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#E3F2FD">

            <TextView
                android:text="Room Number"
                android:paddingRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:text="2.15 QMB"
                android:paddingLeft="20dp" />
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#BBDEFB"
            android:gravity="center_vertical">

            <TextView
                android:text="Current Week"
                android:paddingRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:text="5/12"
                android:paddingLeft="20dp"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/moduleAttendanceTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="#42A5F5">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Attendance Details"
            android:padding="20dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#BBDEFB"
            android:gravity="center_vertical">

            <TextView
                android:text="Personal Attendance"
                android:paddingRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:text="percentage"
                android:paddingLeft="20dp"/>
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#E3F2FD">

            <TextView
                android:text="Average Attendance"
                android:paddingRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:text="percentage"
                android:paddingLeft="20dp" />
        </TableRow>
    </TableLayout>


</LinearLayout>