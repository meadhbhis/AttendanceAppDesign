<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="University of Dundee"
        android:id="@+id/textView"
        android:textColor="#FFF"
        android:background="#2962FF"
        android:gravity="center"
        android:textSize="30dp"
        android:padding="10dp"/>



    <TableLayout
        android:id="@+id/nameTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="#42A5F5">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Karen Petrie"
            android:padding="20dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#BBDEFB"
            android:gravity="center_vertical">

            <TextView
                android:text="Staff ID"
                android:paddingRight="10dp"
                android:textStyle="bold"/>

            <TextView
                android:text="09H017"
                android:paddingLeft="10dp"/>
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#E3F2FD">

            <TextView
                android:text="Password"
                android:paddingRight="10dp"
                android:textStyle="bold"/>

            <TextView
                android:text="1234"
                android:paddingLeft="10dp" />
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#BBDEFB">

            <TextView
                android:text="Email"
                android:layout_marginRight="10dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="karenpetrie@computing.dundee.ac.uk"
                android:layout_marginLeft="10dp"
                android:singleLine="false" />

        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/moduleTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="#42A5F5">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Module List"
            android:padding="20dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#BBDEFB"
            android:gravity="center_vertical">

            <TextView
                android:text="AC31007"
                android:paddingRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:text="Agile Software Engineering"
                android:paddingLeft="20dp"/>
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#E3F2FD">

            <TextView
                android:text="AC31009"
                android:paddingRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:text="Games Programming"
                android:paddingLeft="20dp" />
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#BBDEFB">

            <TextView
                android:text="AC32005"
                android:layout_marginRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:text="Human Computer Interaction And Usability Engineering"
                android:layout_marginLeft="20dp"
                android:singleLine="false"/>

        </TableRow>
    </TableLayout>


</LinearLayout>