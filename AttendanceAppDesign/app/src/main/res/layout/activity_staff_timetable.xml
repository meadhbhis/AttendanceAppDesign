<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="University of Dundee"
        android:id="@+id/textView"
        android:textColor="#FFF"
        android:background="#2962FF"
        android:gravity="center"
        android:textSize="30sp"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
            android:background="#64B5F6"
            android:src="@drawable/left_arrow"
            android:padding="10dp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Profile"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:onClick="viewStaffProfile"
            android:background="#64B5F6"
            android:layout_weight="4"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:layout_marginRight="30dp"
            android:background="#64B5F6"
            android:src="@drawable/right_arrow"
            android:padding="10dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/dateText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Friday 26th February"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18dp"
        android:background="#42A5F5"
        android:textStyle="bold"/>

    <TableLayout
        android:id="@+id/timetableTable"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/row1"
            android:layout_weight="3"
            android:background="#BBDEFB"
            android:layout_gravity="center_vertical"
            android:onClick="viewClassStaff">
            <TextView
                android:text="09:00 - 10:00"
                android:padding="3dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/txtRow1"
                android:text=""
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>
        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_weight="3"
            android:background="#E3F2FD"
            android:layout_gravity="center_vertical"
            android:onClick="viewClassStaff">
            <TextView
                android:text="10:00 - 11:00"
                android:padding="3dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/txtRow2"
                android:text="Agile Programming // Dalhousie 2S14"
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>
        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:layout_weight="3"
            android:background="#BBDEFB"
            android:layout_gravity="center_vertical"
            android:onClick="viewClassStaff">
            <TextView
                android:text="11:00 - 12:00"
                android:padding="3dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/txtRow3"
                android:text=""
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>
        </TableRow>

        <TableRow
            android:id="@+id/row4"
            android:layout_weight="3"
            android:background="#E3F2FD"
            android:layout_gravity="center_vertical"
            android:onClick="viewClassStaff">
            <TextView
                android:text="12:00 - 13:00"
                android:padding="3dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/txtRow4"
                android:text=""
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>
        </TableRow>

        <TableRow
            android:id="@+id/row5"
            android:layout_weight="3"
            android:background="#BBDEFB"
            android:layout_gravity="center_vertical"
            android:onClick="viewClassStaff">
            <TextView
                android:text="13:00 - 14:00"
                android:padding="3dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/txtRow5"
                android:text=""
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>
        </TableRow>

        <TableRow
            android:id="@+id/row6"
            android:layout_weight="3"
            android:background="#E3F2FD"
            android:layout_gravity="center_vertical"
            android:onClick="viewClassStaff">
            <TextView
                android:text="14:00 - 15:00"
                android:padding="3dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/txtRow6"
                android:text=""
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>
        </TableRow>

        <TableRow
            android:id="@+id/row7"
            android:layout_weight="3"
            android:background="#BBDEFB"
            android:layout_gravity="center_vertical"
            android:onClick="viewClassStaff">
            <TextView
                android:text="15:00 - 16:00"
                android:padding="3dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/txtRow7"
                android:text=""
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>
        </TableRow>

        <TableRow
            android:id="@+id/row8"
            android:layout_weight="3"
            android:background="#E3F2FD"
            android:layout_gravity="center_vertical"
            android:onClick="viewClassStaff">
            <TextView
                android:text="16:00 - 17:00"
                android:padding="3dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/txtRow8"
                android:text=""
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>
        </TableRow>

        <TableRow
            android:id="@+id/row9"
            android:layout_weight="3"
            android:background="#BBDEFB"
            android:onClick="viewClassStaff">
            <TextView
                android:text="17:00 - 18:00"
                android:padding="3dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/txtRow9"
                android:text=""
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>
        </TableRow>
    </TableLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText" />


</LinearLayout>