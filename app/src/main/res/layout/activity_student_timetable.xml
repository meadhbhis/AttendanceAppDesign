            android:onClick="viewStudentClass">
            <TextView
                android:text="15:00 - 16:00"
                android:padding="3dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:text="Games Programming"
                android:layout_gravity="center_vertical"
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/module7" />
        </TableRow>

        <TableRow
            android:id="@+id/extraRow7"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:background="#FFF59D"
            android:onClick="viewStudentClass">

            <TextView />
            <TextView
                android:text="Scrymgeour 2.08"
                android:padding="3dp"
