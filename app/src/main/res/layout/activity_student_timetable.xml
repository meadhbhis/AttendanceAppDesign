                android:layout_marginLeft="10dp"
                android:id="@+id/module8" />
        </TableRow>

        <TableRow
            android:id="@+id/extraRow8"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:background="#FFF59D"
            android:onClick="viewStudentClass">

            <TextView />
            <TextView
                android:text="Scrymgeour 2.08"
                android:padding="3dp"
