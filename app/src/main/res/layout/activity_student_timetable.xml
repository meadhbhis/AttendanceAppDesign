            android:layout_gravity="center_vertical">

            <TextView />
            <TextView
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/info5" />

        </TableRow>

        <TableRow
            android:id="@+id/row6"
            android:layout_weight="3"
            android:background="#A5D6A7"
            android:onClick="viewStudentClass">
            <TextView
                android:text="14:00 - 15:00"
