<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Banner for top of page-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#64B5F6">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="home"
            android:onClick="viewStudentProfile"
            android:background="#64B5F6"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Student Attendance"
            android:padding="10dp"
            android:gravity="center|right"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <!-- End of banner-->



    <TableLayout
        android:id="@+id/nameTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="#42A5F5">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Meadhbh Murphy"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#BBDEFB"
            android:gravity="center_vertical">

            <TextView
                android:text="Student ID"
                android:paddingRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/matriculationNumber"
                android:text="120012544"
                android:paddingLeft="20dp"/>
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#E3F2FD">

            <TextView
                android:text="Email"
                android:layout_marginRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/studentEmail"
                android:text="m.x.murphy@dundee.ac.uk"
                android:layout_marginLeft="20dp" />

        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/moduleTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="#42A5F5">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Average Attendance"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#BBDEFB"
            android:gravity="center_vertical">

            <TextView
                android:text="Overall"
                android:paddingRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/overallAttendance"
                android:text="percentage"
                android:paddingLeft="20dp"/>
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#E3F2FD">

            <TextView
                android:text="This Week Overall"
                android:paddingRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/weekAttendance"
                android:text="percentage"
                android:paddingLeft="20dp" />
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#BBDEFB">

            <TextView
                android:text="Your Module"
                android:layout_marginRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/module1Attendance"
                android:layout_width="wrap_content"
                android:text="percentage"
                android:layout_marginLeft="20dp"
                android:singleLine="false"/>
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#E3F2FD">

            <TextView
                android:text="AC31007"
                android:paddingRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/module2Attendance"
                android:text="percentage"
                android:paddingLeft="20dp" />
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="#BBDEFB">

            <TextView
                android:text="AC32005"
                android:layout_marginRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/module3Attendance"
                android:layout_width="wrap_content"
                android:text="percentage"
                android:layout_marginLeft="20dp"
                android:singleLine="false"/>
        </TableRow>
    </TableLayout>


</LinearLayout>